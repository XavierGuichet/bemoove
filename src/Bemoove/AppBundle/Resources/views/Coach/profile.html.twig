{# src/Bemoove/AppBundle/Resources/views/Coach/profile.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}My Coach profile{% endblock %}

{% block body %}
    <h1>My Coach profile</h1>
    <section class="row">
        <div class="wrapper">
            <nav class="sm-2">
                <h2>liens coach</h2>
                <ul>
                    <li>
                        <a href="{{ path('bemoove_app_coach_dashboard') }}">Dashboard</a>
                    </li>
                    <li>
                        <a href="{{ path('bemoove_app_coach_profile') }}">My profile</a>
                    </li>
                    <li>
                        <a href="{{ path('bemoove_app_coach_mytraining') }}">My trainning</a>
                    </li>
                    <li>
                        <a href="{{ path('bemoove_app_coach_gallery') }}">My Images</a>
                    </li>
                </ul>
            </nav>
            <div class="sm-10">
                <h2>My profile</h2>
                {{ form_start(form) }}
                <div class="sm-6">
                    <h3>Identité (visible par tous)</h3>
                    <label>Pseudo</label>
                    {{ form_row(form.lastname) }}
                    {{ form_row(form.firstname) }}
                    <h3>Information générales</h3>
                    {{ form_row(form.birthday) }}
                    {{ form_row(form.ismale) }}
                </div>
                <div class="sm-6">
                    <h3>Coordonnées physique</h3>
                    {{ form_row(form.address) }}
                    <h3>Contact</h3>
                    <label>Mail</label>
                    {{ form_row(form.telHome) }}
                    {{ form_row(form.telMobile) }}
                </div>
                <div class="sm-6">
                    <h3>Présentation</h3>
                    <label>Photo de profil</label><input type="file" disabled/>
                    {{ form_row(form.presentation) }}
                </div>
                <div class="sm-6">
                    <h3>Mes sports</h3>
                    <label>Mes diplomes</label><br/>
                    <label>Liste des sports autorisé à encadrer</label>
                    <label>Ajouter un certificat/diplome</label><input type="file" disabled/>
                </div>
                <div class="sm-6">
                    <h3>Info assurance</h3>
                </div>
                <div class="sm-12">
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
    <section>
    {% endblock %}
    